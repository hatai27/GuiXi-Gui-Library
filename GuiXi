function GuiXiLib:CreateWindow(config)
    local self = setmetatable({}, GuiXiLib)
    
    config = config or {}
    self.Title = config.Title or "GuiXi"
    self.TitleImage = config.TitleImage or ""
    self.ToggleImage = config.ToggleImage or ""
    
    self.Pages = {}
    self.PageButtons = {}
    self.CurrentPage = nil
    self.IsVisible = true
    
    -- –°–æ–∑–¥–∞–µ–º ScreenGui
    self.ScreenGui = Instance.new("ScreenGui")
    self.ScreenGui.Name = "GuiXi_" .. math.random(1000, 9999)
    self.ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    self.ScreenGui.ResetOnSpawn = false
    self.ScreenGui.Parent = game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui")
    
    -- –ì–ª–∞–≤–Ω—ã–π Frame
    self.MainFrame = Instance.new("Frame")
    self.MainFrame.Name = "MainFrame"
    self.MainFrame.BorderSizePixel = 0
    self.MainFrame.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    self.MainFrame.Size = UDim2.new(0, 502, 0, 276)
    self.MainFrame.Position = UDim2.new(0.5, -251, 0.5, -138)
    self.MainFrame.Parent = self.ScreenGui
    
    local mainCorner = Instance.new("UICorner")
    mainCorner.Parent = self.MainFrame
    
    createRainbowStroke(self.MainFrame, 1.5)
    makeDraggable(self.MainFrame)
    
    -- Title Image
    self.TitleImageLabel = Instance.new("ImageLabel")
    self.TitleImageLabel.Name = "TitleImage"
    self.TitleImageLabel.BorderSizePixel = 0
    self.TitleImageLabel.BackgroundTransparency = 1
    self.TitleImageLabel.Image = self.TitleImage
    self.TitleImageLabel.Size = UDim2.new(0, 54, 0, 54)
    self.TitleImageLabel.Position = UDim2.new(0, 8, 0, 4)
    self.TitleImageLabel.Parent = self.MainFrame
    
    -- Title Text
    self.TitleLabel = Instance.new("TextLabel")
    self.TitleLabel.Name = "TitleLabel"
    self.TitleLabel.BorderSizePixel = 0
    self.TitleLabel.TextSize = 27
    self.TitleLabel.BackgroundTransparency = 1
    self.TitleLabel.FontFace = Font.new("rbxasset://fonts/families/HighwayGothic.json", Enum.FontWeight.Regular, Enum.FontStyle.Normal)
    self.TitleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    self.TitleLabel.Size = UDim2.new(0, 300, 0, 46)
    self.TitleLabel.Text = self.Title
    self.TitleLabel.Position = UDim2.new(0, 64, 0, 4)
    self.TitleLabel.TextXAlignment = Enum.TextXAlignment.Left
    self.TitleLabel.Parent = self.MainFrame
    
    -- Close Button
    self.CloseButton = Instance.new("TextButton")
    self.CloseButton.Name = "CloseButton"
    self.CloseButton.BorderSizePixel = 0
    self.CloseButton.TextSize = 17
    self.CloseButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    self.CloseButton.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    self.CloseButton.Size = UDim2.new(0, 52, 0, 42)
    self.CloseButton.Text = "X"
    self.CloseButton.Position = UDim2.new(1, -58, 0, 6)
    self.CloseButton.Parent = self.MainFrame
    
    local closeCorner = Instance.new("UICorner")
    closeCorner.Parent = self.CloseButton
    
    createRainbowStroke(self.CloseButton, 0.5)
    
    self.CloseButton.MouseButton1Click:Connect(function()
        self:Hide()
    end)
    
    -- Pages Container (–ª–µ–≤–∞—è –ø–∞–Ω–µ–ª—å)
    self.PagesContainer = Instance.new("ScrollingFrame")
    self.PagesContainer.Name = "PagesContainer"
    self.PagesContainer.BorderSizePixel = 0
    self.PagesContainer.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    self.PagesContainer.Size = UDim2.new(0, 82, 0, 210)
    self.PagesContainer.Position = UDim2.new(0, 6, 0, 62)
    self.PagesContainer.ScrollBarThickness = 6
    self.PagesContainer.ScrollBarImageColor3 = Color3.fromRGB(45, 45, 45)
    self.PagesContainer.CanvasSize = UDim2.new(0, 0, 0, 0)
    self.PagesContainer.Parent = self.MainFrame
    
    local pagesCorner = Instance.new("UICorner")
    pagesCorner.Parent = self.PagesContainer
    
    createRainbowStroke(self.PagesContainer, 0.5)
    
    -- UIListLayout –¥–ª—è –∫–Ω–æ–ø–æ–∫ —Å—Ç—Ä–∞–Ω–∏—Ü
    self.PagesLayout = Instance.new("UIListLayout")
    self.PagesLayout.Parent = self.PagesContainer
    self.PagesLayout.SortOrder = Enum.SortOrder.LayoutOrder
    self.PagesLayout.Padding = UDim.new(0, 4)
    
    local pagesPadding = Instance.new("UIPadding")
    pagesPadding.Parent = self.PagesContainer
    pagesPadding.PaddingLeft = UDim.new(0, 2)
    pagesPadding.PaddingRight = UDim.new(0, 2)
    pagesPadding.PaddingTop = UDim.new(0, 2)
    pagesPadding.PaddingBottom = UDim.new(0, 2)
    
    -- –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ Canvas Size
    self.PagesLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
        self.PagesContainer.CanvasSize = UDim2.new(0, 0, 0, self.PagesLayout.AbsoluteContentSize.Y + 4)
    end)
    
    -- Content Container (–ø—Ä–∞–≤–∞—è –ø–∞–Ω–µ–ª—å)
    self.ContentContainer = Instance.new("Frame")
    self.ContentContainer.Name = "ContentContainer"
    self.ContentContainer.BorderSizePixel = 0
    self.ContentContainer.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    self.ContentContainer.Size = UDim2.new(0, 398, 0, 208)
    self.ContentContainer.Position = UDim2.new(0, 94, 0, 62)
    self.ContentContainer.Parent = self.MainFrame
    
    local contentCorner = Instance.new("UICorner")
    contentCorner.Parent = self.ContentContainer
    
    createRainbowStroke(self.ContentContainer, 0.5)
    
    -- Toggle Button
    self.ToggleButton = Instance.new("ImageButton")
    self.ToggleButton.Name = "ToggleButton"
    self.ToggleButton.BorderSizePixel = 0
    self.ToggleButton.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    self.ToggleButton.Size = UDim2.new(0, 72, 0, 68)
    self.ToggleButton.Image = self.ToggleImage
    self.ToggleButton.Position = UDim2.new(0, 10, 0, 10)
    self.ToggleButton.Parent = self.ScreenGui
    
    local toggleCorner = Instance.new("UICorner")
    toggleCorner.Parent = self.ToggleButton
    
    createRainbowStroke(self.ToggleButton, 1.5)
    makeDraggable(self.ToggleButton)
    
    self.ToggleButton.MouseButton1Click:Connect(function()
        self:Toggle()
    end)
    
    -- –°–æ–∑–¥–∞–µ–º Main —Å—Ç—Ä–∞–Ω–∏—Ü—É –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é
    self:CreateMainPage()
    
    return self
end

function GuiXiLib:CreateMainPage()
    local mainFrame = Instance.new("Frame")
    mainFrame.Name = "MainPage"
    mainFrame.Size = UDim2.new(1, 0, 1, 0)
    mainFrame.BackgroundTransparency = 1
    mainFrame.Visible = true
    mainFrame.Parent = self.ContentContainer
    
    -- –¢–µ–∫—Å—Ç –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏ –æ–± –∏–≥—Ä–æ–∫–µ
    local infoLabel = Instance.new("TextLabel")
    infoLabel.Name = "InfoLabel"
    infoLabel.BorderSizePixel = 0
    infoLabel.TextSize = 15
    infoLabel.BackgroundTransparency = 1
    infoLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    infoLabel.Size = UDim2.new(1, -132, 1, -8)
    infoLabel.Position = UDim2.new(0, 130, 0, 4)
    infoLabel.TextXAlignment = Enum.TextXAlignment.Left
    infoLabel.TextYAlignment = Enum.TextYAlignment.Top
    infoLabel.TextWrapped = true
    infoLabel.Parent = mainFrame
    
    task.spawn(function()
        task.wait(0.5)
        infoLabel.Text = getPlayerInfo()
    end)
    
    -- –ê–≤–∞—Ç–∞—Ä –∏–≥—Ä–æ–∫–∞
    local avatarImage = Instance.new("ImageLabel")
    avatarImage.Name = "AvatarImage"
    avatarImage.BorderSizePixel = 0
    avatarImage.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    avatarImage.Size = UDim2.new(0, 120, 0, 116)
    avatarImage.Position = UDim2.new(0, 6, 0, 4)
    avatarImage.Parent = mainFrame
    
    local avatarCorner = Instance.new("UICorner")
    avatarCorner.Parent = avatarImage
    
    createRainbowStroke(avatarImage, 0.5)
    
    local player = game.Players.LocalPlayer
    if player and player.UserId then
        avatarImage.Image = "rbxthumb://type=AvatarHeadShot&id=" .. player.UserId .. "&w=420&h=420"
    end
    
    -- –°–æ–∑–¥–∞–µ–º –∫–Ω–æ–ø–∫—É Main –≤ —Å–ø–∏—Å–∫–µ —Å—Ç—Ä–∞–Ω–∏—Ü
    local mainButton = Instance.new("TextButton")
    mainButton.Name = "MainButton"
    mainButton.BorderSizePixel = 0
    mainButton.TextSize = 22
    mainButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    mainButton.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    mainButton.FontFace = Font.new("rbxasset://fonts/families/HighwayGothic.json", Enum.FontWeight.Regular, Enum.FontStyle.Normal)
    mainButton.Size = UDim2.new(1, -4, 0, 64)
    mainButton.Text = "Main"
    mainButton.LayoutOrder = 0
    mainButton.Parent = self.PagesContainer
    
    local mainBtnCorner = Instance.new("UICorner")
    mainBtnCorner.Parent = mainButton
    
    createRainbowStroke(mainButton, 0.5)
    
    mainButton.MouseButton1Click:Connect(function()
        self:ShowPage("Main")
    end)
    
    -- –°–æ—Ö—Ä–∞–Ω—è–µ–º Main —Å—Ç—Ä–∞–Ω–∏—Ü—É
    local mainPage = Page.new("Main", mainFrame, self)
    self.Pages["Main"] = mainPage
    self.PageButtons["Main"] = mainButton
    self.CurrentPage = mainPage
    
    return mainPage
end

function GuiXiLib:GetMainPage()
    return self.Pages["Main"]
end

function GuiXiLib:CreatePage(name)
    if self.Pages[name] then
        warn("Page '" .. name .. "' already exists!")
        return self.Pages[name]
    end
    
    -- –°–æ–∑–¥–∞–µ–º Frame –¥–ª—è –∫–æ–Ω—Ç–µ–Ω—Ç–∞ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
    local pageFrame = Instance.new("Frame")
    pageFrame.Name = name .. "Page"
    pageFrame.Size = UDim2.new(1, 0, 1, 0)
    pageFrame.BackgroundTransparency = 1
    pageFrame.Visible = false
    pageFrame.Parent = self.ContentContainer
    
    -- –°–æ–∑–¥–∞–µ–º –∫–Ω–æ–ø–∫—É —Å—Ç—Ä–∞–Ω–∏—Ü—ã
    local pageButton = Instance.new("TextButton")
    pageButton.Name = name .. "Button"
    pageButton.BorderSizePixel = 0
    pageButton.TextSize = 22
    pageButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    pageButton.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    pageButton.FontFace = Font.new("rbxasset://fonts/families/HighwayGothic.json", Enum.FontWeight.Regular, Enum.FontStyle.Normal)
    pageButton.Size = UDim2.new(1, -4, 0, 64)
    pageButton.Text = name
    pageButton.LayoutOrder = #self.Pages + 1
    pageButton.Parent = self.PagesContainer
    
    local btnCorner = Instance.new("UICorner")
    btnCorner.Parent = pageButton
    
    createRainbowStroke(pageButton, 0.5)
    
    pageButton.MouseButton1Click:Connect(function()
        self:ShowPage(name)
    end)
    
    -- –°–æ–∑–¥–∞–µ–º –æ–±—ä–µ–∫—Ç Page
    local page = Page.new(name, pageFrame, self)
    self.Pages[name] = page
    self.PageButtons[name] = pageButton
    
    return page
end

function GuiXiLib:ShowPage(name)
    local page = self.Pages[name]
    if not page then
        warn("Page '" .. name .. "' does not exist!")
        return
    end
    
    -- –°–∫—Ä—ã–≤–∞–µ–º —Ç–µ–∫—É—â—É—é —Å—Ç—Ä–∞–Ω–∏—Ü—É
    if self.CurrentPage then
        self.CurrentPage:Hide()
    end
    
    -- –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –Ω–æ–≤—É—é —Å—Ç—Ä–∞–Ω–∏—Ü—É
    page:Show()
    self.CurrentPage = page
end

function GuiXiLib:Toggle()
    if self.IsVisible then
        self:Hide()
    else
        self:Show()
    end
end

function GuiXiLib:Show()
    self.MainFrame.Visible = true
    self.IsVisible = true
end

function GuiXiLib:Hide()
    self.MainFrame.Visible = false
    self.IsVisible = false
end

function GuiXiLib:Destroy()
    if self.ScreenGui then
        self.ScreenGui:Destroy()
    end
end

-- =====================================================
-- –≠–ö–°–ü–û–†–¢
-- =====================================================

return GuiXiLib
