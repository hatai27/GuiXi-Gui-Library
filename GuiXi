local GuiXiLib = {}
GuiXiLib.__index = GuiXiLib

-- –§—É–Ω–∫—Ü–∏—è —Å–æ–∑–¥–∞–Ω–∏—è —Ä–∞–¥—É–∂–Ω–æ–π –æ–±–≤–æ–¥–∫–∏
local function createRainbowStroke(guiObject, thickness)
    local stroke = Instance.new("UIStroke")
    stroke.Parent = guiObject
    stroke.Thickness = thickness or 0.5
    stroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
    
    local hue = 0
    local speed = 1
    
    local function HSVtoRGB(h, s, v)
        local r, g, b
        local i = math.floor(h * 6)
        local f = h * 6 - i
        local p = v * (1 - s)
        local q = v * (1 - f * s)
        local t = v * (1 - (1 - f) * s)
        i = i % 6
        
        if i == 0 then r, g, b = v, t, p
        elseif i == 1 then r, g, b = q, v, p
        elseif i == 2 then r, g, b = p, v, t
        elseif i == 3 then r, g, b = p, q, v
        elseif i == 4 then r, g, b = t, p, v
        elseif i == 5 then r, g, b = v, p, q
        end
        
        return Color3.new(r, g, b)
    end
    
    game:GetService("RunService").Heartbeat:Connect(function(dt)
        hue = hue + (speed * dt / 10)
        if hue >= 1 then hue = 0 end
        stroke.Color = HSVtoRGB(hue, 1, 1)
    end)
    
    return stroke
end

-- –§—É–Ω–∫—Ü–∏—è –¥–ª—è –ø–µ—Ä–µ—Ç–∞—Å–∫–∏–≤–∞–Ω–∏—è
local function makeDraggable(frame)
    local UserInputService = game:GetService("UserInputService")
    local dragging = false
    local dragStart = nil
    local startPos = nil
    
    local function startDrag(input)
        dragging = true
        dragStart = input.Position
        startPos = frame.Position
    end
    
    local function updateDrag(input)
        if dragging then
            local delta = input.Position - dragStart
            frame.Position = UDim2.new(
                startPos.X.Scale,
                startPos.X.Offset + delta.X,
                startPos.Y.Scale,
                startPos.Y.Offset + delta.Y
            )
        end
    end
    
    local function endDrag()
        dragging = false
        dragStart = nil
        startPos = nil
    end
    
    frame.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or 
           input.UserInputType == Enum.UserInputType.Touch then
            startDrag(input)
        end
    end)
    
    frame.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement or 
           input.UserInputType == Enum.UserInputType.Touch then
            updateDrag(input)
        end
    end)
    
    frame.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or 
           input.UserInputType == Enum.UserInputType.Touch then
            endDrag()
        end
    end)
    
    UserInputService.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or 
           input.UserInputType == Enum.UserInputType.Touch then
            endDrag()
        end
    end)
end

-- –§—É–Ω–∫—Ü–∏—è –¥–ª—è –ø–æ–ª—É—á–µ–Ω–∏—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏ –æ–± –∏–≥—Ä–æ–∫–µ
local function getPlayerInfo()
    local player = game.Players.LocalPlayer
    local LocalizationService = game:GetService("LocalizationService")
    
    local regionFlags = {
        ["US"] = "üá∫üá∏", ["RU"] = "üá∑üá∫", ["GB"] = "üá¨üáß", ["DE"] = "üá©üá™",
        ["FR"] = "üá´üá∑", ["ES"] = "üá™üá∏", ["IT"] = "üáÆüáπ", ["BR"] = "üáßüá∑",
        ["CA"] = "üá®üá¶", ["AU"] = "üá¶üá∫", ["JP"] = "üáØüáµ", ["CN"] = "üá®üá≥",
        ["KR"] = "üá∞üá∑", ["MX"] = "üá≤üáΩ", ["IN"] = "üáÆüá≥", ["PL"] = "üáµüá±",
        ["NL"] = "üá≥üá±", ["SE"] = "üá∏üá™", ["TR"] = "üáπüá∑", ["UA"] = "üá∫üá¶"
    }
    
    local function getPlayerRegion()
        local success, result = pcall(function()
            return LocalizationService:GetCountryRegionForPlayerAsync(player)
        end)
        
        if success and result then
            local flag = regionFlags[result] or "üè≥Ô∏è"
            return flag .. " " .. result
        else
            return "üè≥Ô∏è Unknown"
        end
    end
    
    local displayName = player.DisplayName or "Unknown"
    local userName = player.Name or "Unknown"
    local region = getPlayerRegion()
    
    return string.format(
        "Hello %s!\nYour Displayname: %s\nYour Username: %s\nYour region: %s\nThanks for using GuiXi!",
        displayName, displayName, userName, region
    )
end

-- =====================================================
-- –ö–õ–ê–°–° PAGE
-- =====================================================

local Page = {}
Page.__index = Page

function Page.new(name, contentFrame, window)
    local self = setmetatable({}, Page)
    
    self.Name = name
    self.ContentFrame = contentFrame
    self.Window = window
    self.Buttons = {}
    self.ButtonCount = 0
    
    -- –°–æ–∑–¥–∞–µ–º ScrollingFrame –¥–ª—è –∫–Ω–æ–ø–æ–∫
    self.ScrollingFrame = Instance.new("ScrollingFrame")
    self.ScrollingFrame.Name = "ButtonContainer"
    self.ScrollingFrame.Size = UDim2.new(1, 0, 1, 0)
    self.ScrollingFrame.Position = UDim2.new(0, 0, 0, 0)
    self.ScrollingFrame.BackgroundTransparency = 1
    self.ScrollingFrame.BorderSizePixel = 0
    self.ScrollingFrame.ScrollBarThickness = 6
    self.ScrollingFrame.ScrollBarImageColor3 = Color3.fromRGB(45, 45, 45)
    self.ScrollingFrame.CanvasSize = UDim2.new(0, 0, 0, 0)
    self.ScrollingFrame.Parent = contentFrame
    
    -- UIGridLayout –¥–ª—è –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–æ–≥–æ —Ä–∞–∑–º–µ—â–µ–Ω–∏—è –∫–Ω–æ–ø–æ–∫
    self.GridLayout = Instance.new("UIGridLayout")
    self.GridLayout.Parent = self.ScrollingFrame
    self.GridLayout.CellSize = UDim2.new(0, 122, 0, 54)
    self.GridLayout.CellPadding = UDim2.new(0, 6, 0, 6)
    self.GridLayout.SortOrder = Enum.SortOrder.LayoutOrder
    
    -- UIPadding –¥–ª—è –æ—Ç—Å—Ç—É–ø–æ–≤
    local padding = Instance.new("UIPadding")
    padding.Parent = self.ScrollingFrame
    padding.PaddingLeft = UDim.new(0, 6)
    padding.PaddingRight = UDim.new(0, 6)
    padding.PaddingTop = UDim.new(0, 4)
    padding.PaddingBottom = UDim.new(0, 4)
    
    -- –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Ä–∞–∑–º–µ—Ä–∞ Canvas –ø—Ä–∏ –∏–∑–º–µ–Ω–µ–Ω–∏–∏ layout
    self.GridLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
        self.ScrollingFrame.CanvasSize = UDim2.new(0, 0, 0, self.GridLayout.AbsoluteContentSize.Y + 8)
    end)
    
    return self
end

function Page:AddButton(text, callback)
    self.ButtonCount = self.ButtonCount + 1
    
    local button = Instance.new("TextButton")
    button.Name = "Button_" .. self.ButtonCount
    button.BorderSizePixel = 0
    button.TextSize = 13
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    button.FontFace = Font.new("rbxasset://fonts/families/HighwayGothic.json", Enum.FontWeight.Regular, Enum.FontStyle.Normal)
    button.Text = text
    button.LayoutOrder = self.ButtonCount
    button.Parent = self.ScrollingFrame
    
    local corner = Instance.new("UICorner")
    corner.Parent = button
    
    createRainbowStroke(button, 0.5)
    
    button.MouseButton1Click:Connect(function()
        if callback then
            pcall(callback)
        end
    end)
    
    table.insert(self.Buttons, button)
    return button
end

function Page:Show()
    self.ContentFrame.Visible = true
end

function Page:Hide()
    self.ContentFrame.Visible = false
end

